<div class="w-1/3 p-6 bg-@BackgroundColor rounded-md shadow-md">
    <div class="flex items-center justify-between">
        <span class="text-lg @TitleColor">@Title</span>
        <i class="@IconClass"></i>
    </div>
    <h1 class="text-2xl font-bold text-@TextColor font-roboto mt-4">
        R$ @Value
    </h1>
</div>

@code {


    [Parameter] public string TextColor { get; set; } = "blue-900";
    [Parameter] public string Title { get; set; }
    [Parameter] public string TitleColor { get; set; }
    [Parameter] public double Value { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public string ColorIcon { get; set; }
    [Parameter] public string BackgroundColor { get; set; }

    private string IconClass => $"fa-solid {Icon} text-{ColorIcon} text-2xl";
}
