<div class="w-1/3 p-6 bg-white rounded-md shadow-md">
    <div class="flex items-center justify-between">
        <span class="text-lg @TitleColor">@Title</span>
        <i class="@IconClass"></i>
    </div>
    <h1 class="text-2xl font-bold text-blue-900 font-roboto mt-4">
        R$ @Value
    </h1>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string TitleColor { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public string Color { get; set; }
    [Parameter] public string BackgroundColor { get; set; }

    
    
    
    
    
    private string IconClass => $"fa-solid {Icon} text-{Color} text-2xl";
}
